<Window x:Class="WPFSample.SampleB.HttpReader"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFSample.SampleB"
        mc:Ignorable="d"
        Title="HttpReader" Height="450" Width="800">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*" />
            <ColumnDefinition Width="1*" />
        </Grid.ColumnDefinitions>
        <Border Grid.Column="0" BorderBrush="Black" BorderThickness="2">
            <TextBlock Name="textblock" TextWrapping="Wrap"></TextBlock>
        </Border>
        <StackPanel Grid.Column="1" Margin="10" Orientation="Vertical" VerticalAlignment="Center">
            <TextBox BorderBrush="Black" BorderThickness="2" Name="cityCode"></TextBox>
            <Rectangle Height="10"/>
            <Button Click="Button_Click">Get</Button>
        </StackPanel>
    </Grid>
</Window>
